<Page x:Class="Frontend.MealHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Frontend"
      Height="710" Width="1110" Background="Transparent"
      Title="MealHistory">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Franklin Gothic Medium Cond"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Franklin Gothic Medium Cond"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#4dba95"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="FontFamily" Value="Franklin Gothic Medium Cond"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Franklin Gothic Medium Cond"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Border CornerRadius="20" Background="White">
        <Grid Width="900">
            <Grid.RowDefinitions>
                <RowDefinition Height="650"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <DataGrid x:Name="MealHistoryDataGrid" AutoGenerateColumns="False" Grid.Row="0" Margin="10">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*"/>
                    <DataGridTextColumn Header="Meal" Binding="{Binding MealType}" Width="*"/>
                    <DataGridTextColumn Header="Kcal" Binding="{Binding OverallEnergy}" Width="*"/>
                    <DataGridTextColumn Header="Products" Binding="{Binding productsInMeal}" Width="*"/>
                </DataGrid.Columns>

            </DataGrid>


        </Grid>
    </Border>
</Page>
