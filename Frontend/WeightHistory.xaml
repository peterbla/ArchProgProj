<Page x:Class="Frontend.WeightHistory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Frontend"
      mc:Ignorable="d" 
      d:DesignHeight="710" d:DesignWidth="1100" 
      Height="710" Width="1110" Background="Transparent"
      Title="WeightHistory">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Franklin Gothic Medium Cond"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Franklin Gothic Medium Cond"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#4dba95"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
        <Style TargetType="DataGrid">
            <Setter Property="FontFamily" Value="Franklin Gothic Medium Cond"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Franklin Gothic Medium Cond"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Page.Resources>

    <Border CornerRadius="20" Background="White">
        <Grid Width="900">
            <Grid.RowDefinitions>
                <RowDefinition Height="650"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <DataGrid x:Name="WeightHistoryDataGrid" AutoGenerateColumns="False" Grid.Row="0" Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Weight (kg)" Binding="{Binding WeightKg}" Width="*"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding Datetime}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="10">
                <TextBox x:Name="WeightInput" Width="100" Height="30" />
                <TextBlock VerticalAlignment="Center" Margin="5">kg</TextBlock>
                <Button x:Name="AddWeightButton" Foreground="White" Content="Add Weight" Width="120" Height="30" Margin="10,0" Click="AddWeight_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Page>
