<Window x:Class="Frontend.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend"
        mc:Ignorable="d"
        Title="AddProductWindow" Height="450" Width="600" Background="White"
        WindowStyle="None" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Franklin Gothic Medium Cond"/>
            <Setter Property="FontSize" Value="17"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Franklin Gothic Medium Cond"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Franklin Gothic Medium Cond"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="350"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="570"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="0" Name="SearchBox" Width="550" VerticalAlignment="Center" />

        <StackPanel Orientation="Vertical" Grid.Row="1">
            <ListBox x:Name="ProductsListBox" SelectionMode="Multiple" Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <RadioButton IsChecked="{Binding IsSelected, Mode=TwoWay}" GroupName="ProductSelection" Click="RadioButton_Checked"/>
                            <TextBlock Text="{Binding Name}" Width="200"/>
                            <TextBlock Text="{Binding Energy}" Width="100"/>
                            <TextBlock Text="{Binding Fat}" Width="100"/>
                            <TextBlock Text="{Binding Carbohydrate}" Width="100"/>
                            <TextBlock Text="{Binding Protein}" Width="100"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <TextBox x:Name="AmountG" Text="{Binding AmountG, UpdateSourceTrigger=PropertyChanged}" Width="40" Grid.Row="1" HorizontalAlignment="Right" Height="20" VerticalAlignment="Bottom" Margin="0,10,120,0" />
        <TextBlock Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,110,0">g</TextBlock>

        <Button Grid.Column="1" HorizontalAlignment="Right" Margin="2" VerticalAlignment="Top" Click="Close" Height="20" Width="20" Background="Transparent" BorderBrush="Transparent">
            <Image Source="assets/cross.png" Height="12" Width="12"/>
        </Button>

        <Button Grid.Row="1" Content="Add Product" HorizontalAlignment="Right" VerticalAlignment="Bottom"  Click="AddProductToMeal" Width="100" Background="#4dba95" BorderBrush="Transparent" Foreground="White">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button Grid.Row="1" Margin="10,0" Content="Add New Product" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Click="AddNewProduct" Width="150" Background="White" BorderBrush="Transparent" >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>


</Window>